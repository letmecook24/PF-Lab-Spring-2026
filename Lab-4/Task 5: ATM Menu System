#include<stdio.h>
int main()
{
int opt,bal,w,d;
printf("Enter your balance: ");
scanf("%d",&bal);
while(opt!=4)
{
printf("\nEnter your option from following:\n");
printf("1. Balance Inquiry\n2. Cash Withdrawal\n3. Deposit\n4. Exit\n");
scanf("%d",&opt);
switch(opt)
{  case 1:
 printf("Your Balance is:%d",bal);
break;  
case 2:
 printf("How much Cash you want to withdraw: ");
scanf("%d",&w);
bal=bal-w;
printf("Current Balance: %d",bal);
break;  
case 3:
printf("How much cash you want to deposit: ");
scanf("%d",&d);
bal=bal+w;
printf("Current Balance: %d",bal);
break;  
case 4:
printf("Exit");
break; 
default:
printf("Worng input");
}  }
return 0;
}
