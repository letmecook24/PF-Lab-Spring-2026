#include <stdio.h>
#include <math.h>
int main()	{
    int choice;
    double num1, num2, result;
    printf("Scientific Calculator\n");
    printf("1.Addition\n2.Subtraction\n3.Multiplication\n4.Division\n");
    printf("5.Square Root\n6.Power\n7.Logarithm\n8.Absolute Value\n");
    printf("9.Sine\n10.Cosine\n11.Tangent\n");
    printf("Enter your choice: ");
    scanf("%d", &choice);
    switch(choice)
    {
        case 1:
            printf("Enter two numbers: ");
            scanf("%lf%lf", &num1, &num2);
            result = num1 + num2;
            printf("Result = %.2lf", result);
            break;
        case 2:
            printf("Enter two numbers: ");
            scanf("%lf%lf", &num1, &num2);
            result = num1 - num2;
            printf("Result = %.2lf", result);
            break;
        case 3:
            printf("Enter two numbers: ");
            scanf("%lf%lf", &num1, &num2);
            result = num1 * num2;
            printf("Result = %.2lf", result);
            break;
        case 4:
            printf("Enter two numbers: ");
            scanf("%lf%lf", &num1, &num2);
            if(num2 == 0)
            {
                printf("Error: Division by zero not allowed");		}

            else
            {
                result = num1 / num2;
                printf("Result = %.2lf", result);
            }
            break;
        case 5:
            printf("Enter a number: ");
            scanf("%lf", &num1);
            if(num1 < 0)
            {
                printf("Error: Square root of negative number not allowed");
            }
            else
            {	result = sqrt(num1);
                printf("Result = %.2lf", result);	}
            	break;
        case 6:
            printf("Enter base and exponent: ");
            scanf("%lf%lf", &num1, &num2);
            result = pow(num1, num2);
            printf("Result = %.2lf", result);
            break;
        case 7:
            printf("Enter a number: ");
            scanf("%lf", &num1);
            if(num1 <= 0)
            {	printf("Error: Logarithm undefined for zero or negative");	}
            else
            {	result = log10(num1);
                printf("Result = %.2lf", result);	}
            	break;
        case 8:
            printf("Enter a number: ");
            scanf("%lf", &num1);
            result = fabs(num1);
            printf("Result = %.2lf", result);
            break;
        case 9:
            printf("Enter angle (in degrees): ");
            scanf("%lf", &num1);
            result = sin(num1 * M_PI / 180);
            printf("Result = %.2lf", result);
            break;
        case 10:
            printf("Enter angle (in degrees): ");
            scanf("%lf", &num1);
            result = cos(num1 * M_PI / 180);
            printf("Result = %.2lf", result);
            break;
        case 11:
            printf("Enter angle (in degrees): ");
            scanf("%lf", &num1);
            result = tan(num1 * M_PI / 180);
            printf("Result = %.2lf", result);
            break;       
        default:
            printf("Invalid choice");		}
    return 0;
}
